<section class="section-wrapper skills-wrapper">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="section-title">
					<h2><%=skills.title%></h2>
					<p><%= skills.text%></p>
				</div>
			</div>
		</div>
		<!--.row-->
		<div class="row">
			<div class="col-md-12">
				<div class="progress-wrapper">
					<h4>Languages</h4>
					<% skills.languages.forEach(function(skill){ %>
						<div class="progress-item">
							<span class="progress-title"><%=skill.name%></span>
							<div class="progress">
								<div class="progress-bar" role="progressbar" aria-valuenow="<%=skill.percent%>" aria-valuemin="0"
										aria-valuemax="100" style="width: <%=skill.percent%>%">
										<span class="progress-percent"> <%=skill.percent%>%</span>
								</div>
							</div>
						</div>
					<% })%>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="progress-wrapper">
					<h4>Frameworks</h4>
					<% skills.frameworks.forEach(function(framework){ %>
						<div class="progress-item">
							<span class="progress-title"><%=framework.name%></span>
							<div class="progress">
								<div class="progress-bar" role="progressbar" aria-valuenow="<%=framework.percent%>" aria-valuemin="0"
										aria-valuemax="100" style="width: <%=framework.percent%>%">
										<span class="progress-percent"> <%=framework.percent%>%</span>
								</div>
							</div>
						</div>
					<% })%>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="progress-wrapper">
					<h4>Tools</h4>
					<% for(var tc = 0; tc < skills.tools.length; tc++) { %>
						<div class="progress-item">
							<span class="progress-title"><%=skills.tools[tc].name%></span>
							<div class="progress">
								<div class="progress-bar" role="progressbar" aria-valuenow="<%=skills.tools[tc].percent%>" aria-valuemin="0"
										aria-valuemax="100" style="width: <%=skills.tools[tc].percent%>%">
										<span class="progress-percent"> <%=skills.tools[tc].percent%>%</span>
								</div>
							</div>
						</div>
					<% } %>
				</div>
			</div>
		</div>
	</div>
</section>